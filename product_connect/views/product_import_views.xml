<odoo>
    <!-- Product Import: Server Action: Print Bin Labels -->
    <record id="server_action_product_import_print_bin_labels" model="ir.actions.server">
        <field name="name">Print Bin Labels</field>
        <field name="model_id" ref="model_product_import"/>
        <field name="binding_model_id" ref="model_product_import"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">
            records.print_bin_labels()
        </field>
    </record>

    <!-- Product Import: Server Action: Print Product Labels -->
    <record id="server_action_product_import_print_product_labels" model="ir.actions.server">
        <field name="name">Print Product Labels</field>
        <field name="model_id" ref="model_product_import"/>
        <field name="binding_model_id" ref="model_product_import"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">
            records.print_product_labels(print_quantity=True)
        </field>
    </record>

    <record id="server_action_product_import_print_product_labels_picture" model="ir.actions.server">
        <field name="name">Print Product Labels (Picture)</field>
        <field name="model_id" ref="model_product_import"/>
        <field name="binding_model_id" ref="model_product_import"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">
            records.print_product_labels(print_quantity=True, printer_job_type="product_label_picture")
        </field>
    </record>

    <!-- Product Import: List View -->
    <record id="view_product_import_tree" model="ir.ui.view">
        <field name="name">product.import.tree</field>
        <field name="model">product.import</field>
        <field name="arch" type="xml">
            <tree class="product_import_tree_view" string="Product Import" editable="bottom" multi_edit="1"
                  open_form_view="1"
                  decoration-warning="not name or not list_price or list_price == 0 or not standard_price or standard_price == 0"
                  decoration-danger="has_recent_messages">
                <header>
                    <button string="Import" type="object" name="import_to_products" icon="fa-upload"/>
                </header>
                <field name="default_code" width="60px"/>
                <field name="images" widget="file_drop" optional="show"/>
                <field name="image_count" column_invisible="1"/>
                <field name="condition" optional="show"/>
                <field name="manufacturer" options="{'no_create': True}"/>
                <field name="mpn" widget="search_mpn_online"/>
                <field name="qty_available" sum="Total Quantity" widget="integer"/>
                <field name="bin"/>
                <field name="name"/>
                <field name="sales_description" optional="show" widget="text" class="text-nowrap"/>
                <field name="part_type" options="{'no_create': True}" optional="show"/>
                <field name="weight" optional="show" widget="integer" width="100px"/>
                <field name="length" string="L" optional="show" width="2"/>
                <field name="width" string="W" optional="show" width="2"/>
                <field name="height" string="H" optional="show" width="2"/>
                <field name="list_price" optional="show" width="7"/>
                <field name="standard_price" optional="show" width="7"/>
                <field name="has_recent_messages" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Product Import: Form View -->
    <record id="view_product_import_form" model="ir.ui.view">
        <field name="name">product.import.form</field>
        <field name="model">product.import</field>
        <field name="arch" type="xml">
            <form string="Product Import">
                <div class="oe_chatter">
                    <!--suppress XmlUnresolvedReference -->
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <!--suppress XmlUnresolvedReference -->
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                <sheet name="product_import_form">
                    <field name="image_icon" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" string="Product Name"></label>
                        <h1>
                            <div class="d-flex caution">
                                <field class="text-break" name="name" options="{'line_breaks': False}"/>
                            </div>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Details">
                            <group>
                                <group>
                                    <field name="default_code"/>
                                    <field name="condition"/>
                                    <field name="mpn"/>
                                    <field name="manufacturer" options="{'no_create': True}"/>
                                    <field name="qty_available" widget="integer"/>
                                    <field name="bin"/>
                                    <field name="list_price"/>
                                    <field name="standard_price"/>
                                </group>
                                <group>
                                    <field name="name"/>
                                    <field name="sales_description"/>
                                    <field name="part_type" options="{'no_create': True}"/>
                                    <field name="weight" widget="integer"/>
                                    <field name="length"/>
                                    <field name="width"/>
                                    <field name="height"/>

                                </group>
                            </group>
                        </page>
                        <page string="Images">
                            <group>
                                <field name="images">
                                    <tree string="Images" editable="bottom">
                                        <field name="product" column_invisible="1"/>
                                        <field name="image_1920" widget="image_upload"/>
                                        <field name="image_1920_resolution" string="Image Res"/>
                                        <field name="image_1920_file_size_kb" widget="integer"/>
                                        <field name="index"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_import_search" model="ir.ui.view">
        <field name="name">product.import.search</field>
        <field name="model">product.import</field>
        <field name="arch" type="xml">
            <search string="Product">
                <field name="default_code" string="Product"
                       filter_domain="['|', '|',  ('name', 'ilike', self) , ('default_code', 'ilike', self), ('bin', 'ilike', self)]"/>
                <field name="name"/>
                <field name="default_code"/>
                <field name="bin"/>
            </search>

        </field>
    </record>

    <record id="action_product_import_image_view" model="ir.actions.act_window">
        <field name="name">Product Image</field>
        <field name="res_model">product.import.image</field>
        <field name="view_mode">tree,form</field>
        <field name="type">ir.actions.act_window</field>
    </record>

    <record id="action_product_import" model="ir.actions.act_window">
        <field name="name">Product Import</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.import</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_product_import_search"/>
    </record>

    <!-- Product Import: Sequence -->
    <menuitem id="menu_subheader_product_import" name="Product Import" parent="stock.menu_stock_inventory_control"/>
    <menuitem id="menu_product_import" name="Product Import" action="action_product_import"
              parent="menu_subheader_product_import"/>
</odoo>

