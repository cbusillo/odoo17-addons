<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
<t t-name="product_connect.ImageUploadWidget">
  <div class="d-inline-block position-relative opacity-trigger-hover">
    <button class="btn btn-primary" t-on-click="onClick">Upload</button>
      <input type="file"
             class="d-none"
             t-ref="fileInput"
             accept="image/*"
             t-on-change="onFileChange"
             capture="environment"/>
      <div class="mt-2 image-preview">

      <t t-if="props.record.data.image_1920">
         <ImageField
                 name="'image_1920'"
                 record="props.record"
                 enableZoom="false"
                 previewImage="getPreviewImageSize()"
                 reload="false"/>
      </t>
          <t t-else="">
        <div class="no-image-placeholder">
        </div>
      </t>
    </div>
  </div>
</t>
</templates>